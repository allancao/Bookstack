<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="30dp"
    android:padding="30dp"
    android:orientation="vertical">

    <TextView android:id="@+id/reading_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="28dp"
        android:text="You are currently reading. \n Keep it up!"
        android:textColor="#ff343434"
        android:paddingTop="30dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/book_heart_small"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom">

        <Button android:id="@+id/hide_message_button"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:layout_width="200dp"
            android:drawablePadding="3sp"
            android:layout_centerHorizontal="true"
            android:text="HIDE MESSAGE"
            android:textColor="#0099CC"
            android:background="#FFFFFF" />
    </LinearLayout>
</LinearLayout>